<% include ../partials/header %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Lapak Mac</p>
      <div class="list-group">
        <li class="list-group-item active">Info 1</li>
        <li class="list-group-item">Info 2</li>
        <li class="list-group-item">Info 3</li>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img class="img-responsive" src="<%= lapakmacs.image %>">
        <div class="caption-full">
          <h4 class="pull-right">IDR.14.000.000,-</h4>
          <h4><a><%= lapakmacs.name %></a></h4>
          <p><p><%=lapakmacs.description %></p></p>
          <p><em>Lapak By <%= lapakmacs.author.username%></em></p>
        </div>
      </div>
      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/lapakmac/<%=lapakmacs._id%>/comments/new">Add a New Comment</a>
        </div>
        <hr>
        <% lapakmacs.comments.forEach(function(comment){%>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author.username %></strong>
              <span class="pull-right">3 days ago</span>
              <p><%= comment.text%></p>
            </div>
          </div>
        <%})%>
      </div>
    </div>
  </div>
</div>

<% include ../partials/footer %>
