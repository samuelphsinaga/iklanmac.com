<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= lapakmacs.name %></h1>

    <div style="width: 30%; margin: 25px auto;">
      <form action="/lapakmac/<%= lapakmacs._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="lapakmacs[name]" value="<%= lapakmacs.name%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="lapakmacs[price]" value="<%= lapakmacs.price%>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="lapakmacs[image]"  value="<%= lapakmacs.image%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="lapakmacs[description]"  value="<%= lapakmacs.description%>">
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/lapakmac">Go Back</a>
    </div>


  </div>
</div>

<% include ../partials/footer %>
